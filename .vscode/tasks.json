{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "tsc: build - tsconfig.json",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "${workspaceFolder}/tsconfig.json"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$tsc"],
        "presentation": {
          "reveal": "silent",
          "echo": true,
          "focus": false,
          "panel": "shared"
        }
      }
    ]
  }